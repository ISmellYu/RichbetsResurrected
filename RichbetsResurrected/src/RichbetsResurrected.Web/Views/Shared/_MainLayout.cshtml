@using Microsoft.AspNetCore.Identity
@using RichbetsResurrected.Entities.Identity.Models
<!DOCTYPE html>
@inject SignInManager<AppUser> _signInManager
<html>
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - Richbets</title>
    <link rel="stylesheet" href="~/css/main.layout.css">
    <link rel="stylesheet" href="~/lib/odometer/odometer-theme-default.css">
    <script src="~/lib/odometer/odometer.min.js"></script>
    <script src="~/lib/signalr/dist/browser/signalr.js"></script>
    <script src="~/js/Shared/layout.rb.js"></script>
    <script
        src="https://code.jquery.com/jquery-3.5.1.js"
        integrity="sha256-QWo7LDvxbWT2tbbQ97B53yJnYU3WhH/C8ycbRAkjPDc="
        crossorigin="anonymous">
    </script>
    @RenderSection("Head", false)
</head>
<body>
<header>
    <h1 class="logo-text">RICH<span class="logo-text-color">BETS</span></h1>
    <nav>
        <ul class="nav-list">
            <div class="point-box">
                <img class="rbc-logo" src="~/img/rbcoin30x30.png" alt="rbcoin">
                <p id="odometer" class="odometer">0</p>
                <p class="points-currency">RBC</p>
            </div>
            <li>
                <a class="-link" asp-action="Privacy" asp-controller="Dashboard">Regulamin</a>
            </li>
            <li class="-link-active">
                <a class="-link" href="/home">Gry</a>
            </li>
            <li>
                @if (_signInManager.IsSignedIn(User))
                {
                    <a class="-link logout-link btn" asp-action="Logout" asp-controller="Account">Wyloguj</a>
                }
                else
                {
                    <a class="-link logout-link" asp-action="Login" asp-controller="Account">Zaloguj</a>
                }

            </li>
        </ul>
    </nav>
</header>

@RenderBody()

@await RenderSectionAsync("scripts", false).ConfigureAwait(false)
</body>
</html>